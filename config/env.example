# Environment Variables Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=support_analytics
DB_USER=analytics_user
DB_PASSWORD=your_secure_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_URL=redis://localhost:6379/0

# API Credentials
ZENDESK_EMAIL=user@company.com
ZENDESK_TOKEN=your_zendesk_api_token
FRESHDESK_API_KEY=your_freshdesk_api_key
INTERCOM_TOKEN=your_intercom_access_token
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
DISCORD_BOT_TOKEN=your_discord_bot_token

# WebSocket Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# Cloud Storage Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

GCP_PROJECT_ID=your-gcp-project-id
GCP_SERVICE_ACCOUNT_KEY=/path/to/service-account-key.json
GCP_STORAGE_BUCKET=your-gcs-bucket-name

AZURE_STORAGE_ACCOUNT=your_azure_storage_account
AZURE_STORAGE_KEY=your_azure_storage_key
AZURE_CONTAINER_NAME=your-container-name

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password
ALERT_EMAIL_RECIPIENTS=admin@company.com,alerts@company.com

# Monitoring and Alerting
PAGERDUTY_INTEGRATION_KEY=your_pagerduty_integration_key
GRAFANA_URL=https://grafana.company.com
GRAFANA_API_KEY=your_grafana_api_key

# OAuth2 Configuration
OAUTH2_CLIENT_ID=your_oauth2_client_id
OAUTH2_CLIENT_SECRET=your_oauth2_client_secret
OAUTH2_REDIRECT_URI=https://your-domain.com/auth/callback

# Security Configuration
ENCRYPTION_KEY_FILE=/path/to/encryption.key
ALLOWED_ORIGINS=https://your-domain.com,https://app.your-domain.com

# Application Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/support-analytics/app.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=10

# Performance Configuration
WORKERS=4
MAX_CONNECTIONS=1000
TIMEOUT=30
KEEPALIVE=2

# Feature Flags
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_TEAM_ANALYSIS=true
ENABLE_PREDICTIVE_ANALYTICS=true
ENABLE_ANOMALY_DETECTION=true
ENABLE_ADVANCED_REPORTING=true
ENABLE_REAL_TIME_MONITORING=true
ENABLE_TWITTER_INTEGRATION=true
ENABLE_DATABASE_CONNECTIONS=true
ENABLE_API_INTEGRATIONS=true
ENABLE_WEBSOCKET_STREAMING=true
ENABLE_CLOUD_STORAGE=true
